<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kylix.submissionbajp3" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_lixflix"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_lixflix_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SubmissionBAJP3" >
        <activity android:name=".ui.activities.FakeMainActivity" >
        </activity>
        <activity android:name=".ui.activities.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.DetailActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kylix.submissionbajp3.ui.activities.MainActivity" />
        </activity>
        <activity android:name=".ui.activities.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>